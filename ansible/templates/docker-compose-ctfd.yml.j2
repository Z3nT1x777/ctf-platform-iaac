version: '3.8'
services:
  ctfd:
    build:
      context: /vagrant/ansible/docker/ctfd
    image: ctfd-custom:{{ ctfd_version }}
    container_name: ctfd
    restart: unless-stopped
    ports:
      - "{{ ctfd_port }}:8000"
    environment:
      - DATABASE_URL=mysql+pymysql://{{ DB_USER }}:{{ DB_PASSWORD }}@db/{{ DB_NAME }}
      - REDIS_URL=redis://cache:6379
      - SECRET_KEY=${CTFD_SECRET_KEY}
    volumes:
      - ./ctfd_data:/var/log/CTFd
      - ./ctfd_uploads:/var/uploads
      - /var/run/docker.sock:/var/run/docker.sock
    depends_on:
      - db
      - cache
    networks:
      - ctfd_network

  db:
    image: mariadb:10.11
    container_name: ctfd_db
    restart: unless-stopped
    environment:
     - MYSQL_ROOT_PASSWORD={{ DB_ROOT_PASSWORD }}
     - MYSQL_DATABASE={{ DB_NAME }}
     - MYSQL_USER={{ DB_USER }}
     - MYSQL_PASSWORD={{ DB_PASSWORD }}

    volumes:
      - ./db_data:/var/lib/mysql
    networks:
      - ctfd_network

  cache:
    image: redis:7-alpine
    container_name: ctfd_cache
    restart: unless-stopped
    networks:
      - ctfd_network

networks:
  ctfd_network:
    driver: bridge

volumes:
  ctfd_data:
  ctfd_uploads:
  db_data:
